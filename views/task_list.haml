!!!
%html
  %body
    %p
    .span15 
      %br
      .container
        %h2 Tasks
        %br
      .container
        .row
          .col-sm-3
            %a.btn.btn-primary{:href => "/task/create"}
              Create New Task
        %br
        .row
          .col-md-12
            .table
              %table{:class => 'table table-striped'}
                %thead
                  %tr
                    %th
                      %b Task Name
                    %th
                      %b Type
                    %th
                      %b Controls
                %tbody
                  - if @tasks
                    - @tasks.each do |task|
                      %tr
                        %td #{task.name} 
                        %td 
                          - if task.hc_attackmode == 3
                            Brute Force
                          - elsif task.hc_attackmode == 0
                            Dictionary
                          - else
                            Uknown
                        %td
                          %a.btn.btn-info{:href => "#modal#{task.id}", "data-toggle" => 'modal'}
                            %i.glyphicon.glyphicon-info-sign{:title => 'Info'}
                          .modal.fade.modal{:id => "modal#{task.id}", :role => "dialog", :tabindex => "-1", "aria-hidden"=>'true'}
                            .modal-dialog.modal-lg
                              .modal-content
                                .modal-header
                                  %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                                    %span{"aria-hidden" => "true"} &times;
                                  %h4.modal-title Task details for: #{task.name} 
                                .modal-body
                                  .row
                                    .form-group
                                      %label.control-label.col-xs-2{:for => ""} Task Name
                                      .col-xs-10
                                        #{task.name}
                                  .row
                                    .form-group
                                      %label.control-label.col-xs-2{:for => ""} Attack Mode
                                      .col-xs-4
                                        - if task.hc_attackmode == 3
                                          Brute Force
                                        - elsif task.hc_attackmode == 0
                                          Dictionary
                                        - else
                                          Unknown
                                  - if task.hc_attackmode == 0
                                    .row
                                      .form-group
                                        %label.control-label.col-xs-2{:for => ""} Wordlist
                                        .col-xs-4
                                          #{task.wl_id}    
                                    .row
                                      .form-group
                                        %label.control-label.col-xs-2{:for => ""} Dictionary Rules
                                        .col-xs-4 
                                          #{task.hc_rule}
                          %a.btn.btn-warning{:href => "/task/edit/#{task.id}"}
                            %i.glyphicon.glyphicon-cog{:title => 'Edit'}
                          %a.btn.btn-danger{:href => "/task/delete/#{task.id}"}
                            %i.glyphicon.glyphicon-trash{:title => 'Delete'}
